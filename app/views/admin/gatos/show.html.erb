<h1 class="h2 mb-4">Detalles del Gato</h1>

<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex justify-content-between align-items-center">
    <h6 class="m-0 font-weight-bold text-primary">Gato: <%= @gato.name %></h6>
    <div>
      <%= link_to 'Volver', admin_gatos_path, class: 'btn btn-sm btn-secondary mr-2' %>
      <%= button_to 'Eliminar', admin_gato_path(@gato), method: :delete, 
          data: { turbo_confirm: '¿Estás seguro de eliminar este gato?' }, 
          class: 'btn btn-sm btn-danger', form: { class: 'd-inline' } %>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <p><strong>Nombre:</strong> <%= @gato.name %></p>
        <p><strong>Edad:</strong> <%= @gato.age %></p>
        <p><strong>Raza:</strong> <%= @gato.breed %></p>
        <p><strong>Color:</strong> <%= @gato.color %></p>
        <p><strong>Peso:</strong> <%= @gato.weight %> kg</p>
        <p><strong>Propietario:</strong> <%= @gato.user&.email || 'Sin propietario' %></p>
        <p><strong>Fecha de registro:</strong> <%= @gato.created_at.strftime("%d/%m/%Y %H:%M") %></p>
        <p><strong>Última actualización:</strong> <%= @gato.updated_at.strftime("%d/%m/%Y %H:%M") %></p>
      </div>
      <div class="col-md-6">
        <p><strong>Descripción:</strong></p>
        <div class="card mb-3">
          <div class="card-body">
            <%= @gato.description %>
          </div>
        </div>
        
        <p><strong>Etiquetas:</strong></p>
        <div>
          <% @gato.tags.each do |tag| %>
            <span class="badge bg-info"><%= tag.name %></span>
          <% end %>
        </div>
        
        <% if @gato.image.attached? %>
          <div class="mt-4">
            <p><strong>Imagen:</strong></p>
            <%= image_tag @gato.image, class: "img-fluid rounded" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>